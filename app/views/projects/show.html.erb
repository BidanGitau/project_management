<h2 class="text-center mt-4">
    <%= @project.title %>
</h2>

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
            <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header font-italic">
                    by
                    <%= @project.student.name if @project.student %>
                        <%= link_to current_student.name, student_path(@project.student) %>

                </div>
                <div class="card-body">
                    <div class="card-text text-left">
                        <%= simple_format(@project.description) %>
                    </div>
                    <%= link_to "Edit", edit_project_path(@project), class: "btn btn-outline-info" %>
                        <%= link_to "Destroy", project_path(@project), data: { 'turbo_method': :delete,turbo_confirm: "Are you sure?" } %>

                </div>
                <div class="card-footer text-muted">
                    <small>Created <%= time_ago_in_words(@project.created_at) %> ago,
          edited <%= time_ago_in_words(@project.updated_at) %> ago</small>
                </div>
            </div>
        </div>
    </div>
</div>